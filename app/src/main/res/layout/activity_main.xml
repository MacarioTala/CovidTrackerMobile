<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etContactName"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:hint="Name of Contact"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDateOfContact"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="Contact Date"
        android:inputType="date"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAddContact"
        app:layout_constraintEnd_toStartOf="@+id/btnAddContact"
        app:layout_constraintStart_toEndOf="@+id/etContactName" />
</androidx.constraintlayout.widget.ConstraintLayout>